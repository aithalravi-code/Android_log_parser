{
    "name": "android-log-parser",
    "version": "1.0.0",
    "description": "Advanced Android Log & BTSnoop Analyzer with automated testing",
    "type": "module",
    "scripts": {
        "dev": "vite -c .config/build/vite.config.js",
        "build": "vite build -c .config/build/vite.config.js",
        "preview": "vite preview",
        "test": "npm run test:unit && npm run test:regression",
        "test:unit": "vitest run --coverage -c .config/test/vitest.config.js",
        "test:regression": "playwright test -c .config/test/playwright.config.js",
        "test:performance": "echo 'Performance tests not yet implemented'",
        "test:all": "npm run test:unit && npm run test:regression",
        "test:e2e": "playwright test -c .config/test/playwright.config.js",
        "test:integration": "playwright test -c .config/test/playwright.integration.config.js",
        "test:watch": "vitest -c .config/test/vitest.config.js",
        "test:ui": "vitest --ui -c .config/test/vitest.config.js",
        "coverage": "vitest run --coverage -c .config/test/vitest.config.js && open TestReports/unit/coverage/index.html",
        "report:allure": "allure generate allure-results --clean && allure open",
        "report:playwright": "playwright show-report TestReports/regression/playwright-report",
        "perf:export": "node tests/scripts/export-performance-metrics.js",
        "install:browsers": "playwright install --with-deps",
        "clean": "rm -rf TestReports dist coverage allure-results allure-report temp/*",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "keywords": [
        "android",
        "log-parser",
        "btsnoop",
        "bluetooth",
        "debugging",
        "testing"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "chart.js": "^4.4.0",
        "jszip": "^3.10.0",
        "nouislider": "^15.7.0",
        "xlsx": "^0.18.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@vitest/coverage-v8": "^1.0.0",
        "@vitest/ui": "^1.0.0",
        "allure-commandline": "^2.25.0",
        "allure-playwright": "^2.15.0",
        "eslint": "^8.55.0",
        "fake-indexeddb": "^5.0.0",
        "jsdom": "^23.0.0",
        "prettier": "^3.1.0",
        "vite": "^5.4.0",
        "vite-plugin-singlefile": "^2.0.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}